{
  "name": "youtube-shorts-bilingual-generator",
  "version": "1.0.0",
  "description": "Generador automático de YouTube Shorts en español e inglés",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "auth": "tsx auth-setup.ts",
    "check": "tsx check-system.ts",
    "test:whisper": "tsx test-whisper.ts",
    "migrate": "tsx run-migrations.ts",
    "retry": "tsx src/retry-uploads.ts"
  },
  "keywords": [
    "youtube",
    "shorts",
    "automation",
    "typescript",
    "bilingual"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cron-parser": "^5.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^134.0.0",
    "jsonwebtoken": "^9.0.3",
    "katax-core": "^1.0.0",
    "node-cron": "^4.2.1",
    "openai": "^4.67.0",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.12.7",
    "nodemon": "^3.1.11",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
