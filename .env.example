# Configuración General
LOG_LEVEL=info

# Configuración de Cron (opcional)
# Ejecutar una sola vez: RUN_ONCE=true
# Programar ejecución: CRON_SCHEDULE='0 10 * * *' (diario 10:00 AM)
RUN_ONCE=false
CRON_SCHEDULE=0 10 * * *

# OpenAI API (REQUERIDO para generación de guiones)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Canal Español (ES)
ES_VOICE=es-MX-DaliaNeural
ES_YOUTUBE_CLIENT_ID=your_client_id_es
ES_YOUTUBE_CLIENT_SECRET=your_client_secret_es
ES_YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback
ES_YOUTUBE_CREDENTIALS_PATH=./credentials-es.json

# Canal Inglés (EN)
EN_VOICE=en-US-JennyNeural
EN_YOUTUBE_CLIENT_ID=your_client_id_en
EN_YOUTUBE_CLIENT_SECRET=your_client_secret_en
EN_YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback
EN_YOUTUBE_CREDENTIALS_PATH=./credentials-en.json

# Configuración de Video
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_DURATION=60

# Unsplash API (opcional - para imágenes de alta calidad)
# Registrarse gratis en: https://unsplash.com/developers
# Límite: 50 requests/hora (suficiente para 1-12 ejecuciones/día)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Pexels API (opcional - fallback de Unsplash)
# Registrarse gratis en: https://www.pexels.com/api/
# Límite: 200 requests/hora
PEXELS_API_KEY=your_pexels_api_key

# PostgreSQL Database
# Opción 1: Connection string completa
# DATABASE_URL=postgresql://shorts_app:password@localhost:5432/youtube_shorts_db

# Opción 2: Parámetros individuales
DB_HOST=localhost
DB_PORT=5432
DB_NAME=youtube_shorts_db
DB_USER=shorts_app
DB_PASSWORD=change_this_secure_password
